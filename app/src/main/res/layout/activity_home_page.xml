<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.smarthealthcultivation.HomePage">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignTop="@+id/radioGroup"
        android:background="#000000"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/planTableButtom"
        android:orientation="horizontal"
        android:background="#f5eaea"
        android:gravity="center">
        <RadioButton
            android:checked="true"
            android:drawableTop="@mipmap/tuijian"
            android:id="@+id/recommend"
            android:text="推荐"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@mipmap/yangsheng"
            android:id="@+id/yangsheng"
            android:text="养生"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@mipmap/taolun"
            android:id="@+id/taolun"
            android:text="讨论"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@mipmap/personal"
            android:id="@+id/PersonalCentre"
            android:text="我的"
            style="@style/HomePageRadio" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </FrameLayout>
</RelativeLayout>
